@{
    ViewData["Title"] = "Home Page";
}

<h2>Events</h2>
<hr />
@if (ViewBag.Exception is null)
{
    <a asp-action="Create" class="btn btn-success">Create</a>
    @if (ViewBag.EventList is not null)
    {
        <table class="table table-hover table-bordered table-responsive-sm">
            <thead>
                <tr>
                    <th>
                        Summary
                    </th>

                    <th>
                        Discreption
                    </th>

                    <th>
                        Location
                    </th>

                    <th>
                        Start
                    </th>

                    <th>
                        End
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.EventList)
            {
                <tbody>
                    <tr>
                        <td>
                            @item.Summary
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Location
                        </td>
                        <td>
                            @item.Start
                        </td>
                        <td>
                            @item.End
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    }
    else
    {
        <h3>No UpComing Events</h3>
    }

}
else
{
    <h3>@ViewBag.Exception</h3>
}

